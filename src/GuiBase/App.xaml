<prism:PrismApplication x:Class="GuiBase.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:control="clr-namespace:GuiBase.Controls"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:GuiBase">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--MaterialDesign style -->
                <materialDesign:BundledTheme BaseTheme="Inherit"
                                     ColorAdjustment="{materialDesign:ColorAdjustment}"
                                     PrimaryColor="LightBlue"
                                     SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Window.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.GroupBox.xaml" />
                <!--GuiBaseDesign Style -->
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.ControlBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.Base.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.Conveyor.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.Text.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.Commands.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GuiBase;component/Resources/GuiBaseDesign.StatusDisplay.xaml" />


            </ResourceDictionary.MergedDictionaries>
 
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>